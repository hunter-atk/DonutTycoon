<%- include ../partials/mainHead.ejs %>

<h2>Create a New Shop</h2>
<form class="" method="post" action="/shops">
  <label for="name">Name:</label>
  <input type="text" name="name" placeholder="name">
  <label for="city">City:</label>
  <input type="text" name="city" placeholder="city">
  <button type="submit" class="waves-effect waves-light btn"><i class="material-icons left">create</i>Create</button>
  <a href="/shops" class="waves-effect waves-light btn"><i class="material-icons left">cancel</i>Cancel</a>
</form>
<% if (error) { %>
  <p><%= error %></p>
<% } %>

